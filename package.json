{
	"name": "ts-hajime",
	"description": "Delightfully bootstraps TypeScript npm libraries.",
	"version": "0.0.1",
	"scripts": {
		"reset": "rm -rf node_modules && npm i",
		"build": "rm -rf dist && pkgroll --minify && tsup",
		"test": "vitest",
		"lint": "eslint --fix",
		"tsc": "tsc"
	},
	"bin": {
		"ts-hajime": "./bin/scripts.js"
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/ts-hajime.git"
	},
	"bugs": {
		"url": "https://github.com/tylim88/ts-hajime/issues"
	},
	"author": "tylim",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@types/eslint__js": "^8.42.3",
		"@vitest/coverage-v8": "^2.1.2",
		"eslint": "^9.12.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"pkgroll": "^2.5.0",
		"prettier": "^3.3.3",
		"tsup": "^8.3.0",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.8.1",
		"vitest": "^2.1.2"
	}
}
