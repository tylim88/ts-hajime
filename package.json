{
	"name": "ts-hajime",
	"description": "Delightfully bootstraps TypeScript npm libraries.",
	"version": "0.3.4",
	"scripts": {
		"setup": "rm -rf node_modules && npm i && husky",
		"prepublishOnly": "npm run build",
		"build": "pkgroll --clean-dist && tsup",
		"test": "vitest",
		"lint": "npx @biomejs/biome check --write",
		"npx": "tsx npx abc"
	},
	"bin": {
		"ts-hajime": "./bin/index.cjs"
	},
	"files": ["./bin", "./template", "./template/.gitignore"],
	"lint-staged": {
		"*.{ts}": ["npm run lint"]
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"require": {
			"types": "./dist/index.d.cts",
			"default": "./dist/index.cjs"
		},
		"import": {
			"types": "./dist/index.d.mts",
			"default": "./dist/index.mjs"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/fs-extra": "^11.0.4",
		"@vitest/coverage-v8": "^2.1.2",
		"cac": "^6.7.14",
		"execa": "^9.4.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"pkgroll": "^2.5.0",
		"tsup": "^8.3.0",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vitest": "^2.1.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tylim88/ts-hajime.git"
	},
	"bugs": {
		"url": "https://github.com/tylim88/ts-hajime/issues"
	},
	"author": "tylim",
	"license": "MIT",
	"keywords": [
		"typescript",
		"bootstrap",
		"library",
		"starter",
		"scaffold",
		"template"
	]
}
